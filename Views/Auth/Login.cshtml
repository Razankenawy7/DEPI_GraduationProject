@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-4">Login</h2>

    @if (ViewBag.Error != null)

    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @* Remove this local file system link — it’s not valid for web pages *@
    @* <a href="c:\users\hp\desktop\files c\depi_graduationproject-master\views\auth\login.cshtml">Local Login View Path</a> *@

    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))

    {
        <div class="form-group mb-3">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="Enter username" required />
        </div>

        <div class="form-group mb-3">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>

        <div class="mt-3">
            @* Use asp-route or asp-action with tag helpers correctly *@
            <a class="btn btn-link" asp-controller="Auth" asp-action="ForgotPassword">Forgot your password?</a>
        </div>
    }
</div>
